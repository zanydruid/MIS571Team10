<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
       <TextView
           android:id="@+id/recipe_infor_time_text_view"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="30min"
           android:textStyle="bold"
           android:layout_weight="1"
           android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/recipe_infor_people_toserve_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4 person"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/recipe_infor_flavor_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Spicy, Salty, Sweet"
            android:textColor="@color/OrangeRed"
            android:textStyle="italic"
            android:layout_weight="2"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/recipe_infor_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Great Recipe.
        I tried it and turned out to be a great hit with my Son."
        />
    <TextView
        android:id="@+id/recipe_infor_source_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        style="?android:autoCompleteTextViewStyle"
        android:text="foodnetwork.com/Singapore-Style Chili Crabs"/>

</LinearLayout>